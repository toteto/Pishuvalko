<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/greenboardfinal"
  android:orientation="vertical"
  android:padding="@dimen/board_borders">

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="12dp">

    <ImageButton
      android:id="@+id/btn_close"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:contentDescription="@string/close_board"
      android:src="@drawable/ic_close"/>

    <ImageButton
      android:id="@+id/btn_next_level"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:contentDescription="@string/next_level"
      android:src="@drawable/ic_right_arrow"/>

    <ImageButton
      android:id="@+id/btn_prev_level"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="right"
      android:layout_toLeftOf="@+id/btn_next_level"
      android:layout_toStartOf="@+id/btn_next_level"
      android:contentDescription="@string/previous_level"
      android:src="@drawable/ic_left_arrow"/>
  </RelativeLayout>

  <com.jane.antonio.pishuvalko.views.WritingImageView
    android:id="@+id/writingImageView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"/>
</LinearLayout>
