<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:padding="0dip"
             tools:context="com.jane.antonio.pishuvalko.controllers.GameTypeActivity">

  <ImageView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/greenboardfinal"
    android:scaleType="fitCenter"/>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/board_borders"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/btn_close"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:contentDescription="@string/close_board"
        android:src="@drawable/exit_arrow"/>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:orientation="horizontal">

      <Button
        android:id="@+id/bt_bigLetters"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:layout_weight="1"
        android:text="@string/capital_letters"/>

      <Button
        android:id="@+id/bt_smallLetters"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:layout_weight="1"
        android:text="@string/lower_case_letters"/>

    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:orientation="horizontal">

      <Button
        android:id="@+id/bt_numbers"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:layout_weight="1"
        android:text="@string/numbers"/>


      <Button
        android:id="@+id/bt_forms"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:layout_weight="1"
        android:text="@string/forms"/>
    </LinearLayout>

  </LinearLayout>


</FrameLayout>
